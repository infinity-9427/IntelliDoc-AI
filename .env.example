# Database Configuration
POSTGRES_DB=intellidoc_db
POSTGRES_USER=intellidoc_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# MinIO Configuration
MINIO_ACCESS_KEY=intellidoc
MINIO_SECRET_KEY=your_secure_minio_password_here

# Backend Configuration
SECRET_KEY=your_very_secure_secret_key_here_32_chars_minimum
ENVIRONMENT=development
LOG_LEVEL=debug

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_SECRET_KEY=your_grafana_secret_key_here

# OCR Configuration
OCR_LANGUAGE=eng
OCR_DPI=300
MAX_FILE_SIZE=50MB

# Processing Configuration
CELERY_WORKER_CONCURRENCY=4
MAX_CONCURRENT_JOBS=10

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Webhook Configuration (optional)
WEBHOOK_SECRET=your_webhook_secret_here

# Analytics Configuration
ENABLE_ANALYTICS=true
RETENTION_DAYS=30

# Debug Configuration
DEBUG=false
ENABLE_PROFILING=false
